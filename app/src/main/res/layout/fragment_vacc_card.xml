<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VaccCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvFdVaccineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="First Dose Vaccine: " />

        <TextView
            android:id="@+id/tvFdVaccineSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="First Dose Vaccine Site: " />


        <TextView
            android:id="@+id/tvFdVaccineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="First Dose Vaccine Date: " />

        <TextView
            android:id="@+id/tvSdVaccineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Second Dose Vaccine: " />

        <TextView
            android:id="@+id/tvSdVaccineSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Second Dose Vaccine Site: " />

        <TextView
            android:id="@+id/tvSdVaccineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Second Dose Vaccine Date: " />

        <TextView
            android:id="@+id/tvBdVaccineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Booster Dose Name: " />

        <TextView
            android:id="@+id/tvBdVaccineSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Booster Dose Site: " />

        <TextView
            android:id="@+id/tvBdVaccineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Booster Dose Date: " />

    </LinearLayout>

</FrameLayout>